<div class="row">
  <div class="col-12 col-lg-8">
    <div class="card p-3 mb-3">
      <h1><%= @flat.name %> <%= link_to icon('fas', 'edit'), edit_flat_path(@flat) %></h1>
      <h3><%= @flat.address %></h3>
    </div>
    <div class="card p-3 mb-3 flex-grow">
      <h2>About the flat</h2>
      <p><%= @flat.description %></p>
    </div>
  </div>
  <div class="col-12 col-lg-4">
    <div class="card p-3 mb-3">
      <h3>Book this place!</h3>
      <label for="from">From:</label>
      <input type="date" name="from">
      <br>
      <label for="to">To:</label>
      <input type="date" name="to">
      <a href="#" class="btn btn-success mt-3">Book</a>
    </div>
    <div class="card p-3 mb-3">
      <h2>Details</h2>
      <div class="d-flex flat-info">
        <p>
          <%= icon('fas', 'user-friends') %>
          <%= @flat.number_of_guests %>
        </p>
        <p class="ml-3">
          <%= icon('fas', 'euro-sign') %>
          <%= @flat.price_per_night %>
        </p>
      </div>
    </div>
    <div class="card p-3 mb-3 socials flex-row justify-content-between">
      <p>Share</p>
      <ul class="list-inline">
        <li class="list-inline-item"><i class="fab fa-facebook-square"></i></li>
        <li class="list-inline-item"><i class="fab fa-twitter-square"></i></li>
        <li class="list-inline-item"><i class="fab fa-pinterest-square"></i></li>
        <li class="list-inline-item"><i class="fas fa-envelope"></i></li>
      </ul>
    </div>
  </div>
</div>

