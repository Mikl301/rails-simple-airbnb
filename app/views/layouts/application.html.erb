<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  </head>

  <body>
    <nav class="d-flex navbar-lewagon px-4 py-3 mb-4">
      <%= link_to 'Simple AirBnb', flats_path %>
      <div class="d-flex">
        <form class="form-inline mr-3">
          <input class="form-control" type="search" name="query" placeholder="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <%= link_to 'Add a flat', new_flat_path, class: "btn btn-outline-primary"  %>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
